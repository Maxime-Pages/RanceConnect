<Window x:Class="Rance_Connect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rance_Connect"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#232628">
        <Menu Margin="0,0,679,0" Background="#2E333A">
            <Button Content="Dashboard" Click="Dashboard_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="118" Margin="-6,10,0,10" Background="#2E333A" BorderBrush="#2E333A" Foreground="White"/>
            <Button Content="Stocks" Click="Stocks_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="118" Margin="-6,10,0,10" Background="#2E333A" BorderBrush="#2E333A" Foreground="White"/>
            <Button Content="Alertes" Click="Alertes_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="118" Margin="-6,10,0,10" Background="#2E333A" BorderBrush="#2E333A" Foreground="White"/>
            <Button Content="Historiques Actions" Click="Historique_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="118" Margin="-6,10,0,10" Background="#2E333A" BorderBrush="#2E333A" Foreground="White"/>
        </Menu>
        <Frame x:Name="Main" Margin="121,0,0,0" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
